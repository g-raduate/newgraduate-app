{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Flutter pub get",
			"type": "shell",
			"command": "flutter",
			"args": [
				"pub",
				"get"
			],
			"problemMatcher": [
				"$dart-pub"
			],
			"group": "build"
		},
		{
			"label": "Flutter build APK",
			"type": "shell",
			"command": "flutter",
			"args": [
				"build",
				"apk",
				"--release"
			],
			"problemMatcher": [
				"$dart-pub"
			],
			"group": "build"
		},
		{
			"label": "Flutter build APK (release)",
			"type": "shell",
			"command": "flutter",
			"args": [
				"build",
				"apk",
				"--release",
				"--no-tree-shake-icons"
			],
			"problemMatcher": [
				"$dart-pub"
			],
			"group": "build"
		},
		{
			"label": "Flutter build AAB (release)",
			"type": "shell",
			"command": "flutter",
			"args": [
				"build",
				"appbundle",
				"--release"
			],
			"problemMatcher": [
				"$dart-pub"
			],
			"group": "build"
		},
		{
			"label": "Flutter build appbundle --release (2)",
			"type": "shell",
			"command": "flutter",
			"args": [
				"build",
				"appbundle",
				"--release",
				"--build-name",
				"1.2.1",
				"--build-number",
				"4"
			],
			"problemMatcher": [
				"$dart-pub"
			],
			"group": "build"
		},
		{
			"label": "Flutter pub get (release prep)",
			"type": "shell",
			"command": "flutter",
			"args": [
				"pub",
				"get"
			],
			"problemMatcher": [
				"$dart-pub"
			],
			"group": "build"
		},
		{
			"label": "Flutter build APK (release) now",
			"type": "shell",
			"command": "flutter",
			"args": [
				"build",
				"apk",
				"--release"
			],
			"problemMatcher": [
				"$dart-pub"
			],
			"group": "build"
		},
		{
			"label": "Git add & commit release",
			"type": "shell",
			"command": "bash",
			"args": [
				"-lc",
				"git add -A && git commit -m \"chore(build): release APK/AAB for 1.2.1+4\" || echo \"no changes\""
			],
			"group": "build"
		},
		{
			"label": "Flutter build appbundle --release (user request)",
			"type": "shell",
			"command": "flutter",
			"args": [
				"build",
				"appbundle",
				"--release"
			],
			"problemMatcher": [
				"$dart-pub"
			],
			"group": "build"
		},
		{
			"label": "Rebuild APK release",
			"type": "shell",
			"command": "flutter",
			"args": [
				"build",
				"apk",
				"--release"
			],
			"problemMatcher": [
				"$dart-pub"
			],
			"group": "build"
		},
		{
			"label": "Flutter build AAB (release) (on-demand)",
			"type": "shell",
			"command": "flutter",
			"args": [
				"build",
				"appbundle",
				"--release"
			],
			"problemMatcher": [
				"$dart-pub"
			],
			"group": "build"
		}
	]
}